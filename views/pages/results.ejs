<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Results</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

</head>
<body>
  <h2>Locations</h2>
  <% if (estatecode && itemcategory) { %>
    <p>Showing results for <strong><%= itemcategory %></strong> in estate code <strong><%= estatecode %></strong>.</p>
  <% } %>
  <% if (!channels || channels.length === 0) { %>
    <p>No results found.</p>
  <% } else { %>
    <div id="map" style="height: 500px;" aria-label="Map showing matched locations"></div>
    <ul aria-label="List of matched locations">
      <% channels.forEach(channel => { %>
        <li>
          <strong><%= channel.Name %></strong><br>
          <strong>Type:</strong> <%= channel.Type %><br>
          <strong>Description:</strong> <%= channel.Desc %><br>
          <strong>Address:</strong> <%= channel.Address %><br>
          <strong>Item Category:</strong> <%= channel.Itemcategory %><br>
          <strong>Postcode:</strong> <%= channel.Postcode %><br>
          <!-- Add more fields as needed -->
        </li>
      <% }) %>
    </ul>
  <% } %>
</body>
</html>
