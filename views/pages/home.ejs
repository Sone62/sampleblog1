<body>
<main class="container">
<%- include('../partials/navbar'); %>
<img class="banner-img" src="/images/main1.jpg" alt="where your things go matters">
<br>

<div class="welcome-container">
<h4>Seeking to declutter? Where your things go matters.
  Explore your options for what to do with your items, from large appliances to small gadgets or old batteries,
  be it to recycle, repair or donate.
</h4>

<!-- Search by Item -->
<form action="/results" method="POST" class="input-section">
  <div class="input-group">
    <label for="item">Search by Item:</label>
    <select id="item" name="item" required>
      <option value="">-- Select your item --</option>
      <% 
        const items = [];
        channels.forEach(function(channel) {
          if (channel.Items && !items.includes(channel.Items)) items.push(channel.Items);
        });
        items.forEach(function(item) { 
      %>
        <option value="<%= item %>"><%= item %></option>
      <% }); %>
    </select>
  </div>
  <button type="submit" class="declutter-btn active">Search by Item</button>
</form>

<!-- Search by Method (Type) -->
<form action="/results" method="POST" class="input-section">
  <div class="input-group">
    <label for="type">Search by Method:</label>
    <select id="type" name="type" required>
      <option value="">-- Select your preferred way --</option>
      <% 
        const types = [];
        channels.forEach(function(channel) {
          if (channel.Type && !types.includes(channel.Type)) types.push(channel.Type);
        });
        types.forEach(function(type) { 
      %>
        <option value="<%= type %>"><%= type %></option>
      <% }); %>
    </select>
  </div>
  <button type="submit" class="declutter-btn active">Search by Method</button>
</form>

<!-- Search by Location (Postcode) -->
<form action="/results" method="POST" class="input-section">
  <div class="input-group">
    <label for="postcode">Search by Location:</label>
    <select id="postcode" name="postcode" required>
      <option value="">-- Select first two digits of your postal code --</option>
      <% 
        const postcodes = [];
        channels.forEach(function(channel) {
          if (channel.Postcode && !postcodes.includes(channel.Postcode)) postcodes.push(channel.Postcode);
        });
        postcodes.forEach(function(postcode) { 
      %>
        <option value="<%= postcode %>"><%= postcode %></option>
      <% }); %>
    </select>
  </div>
  <button type="submit" class="declutter-btn active">Search by Location</button>
</form>

</div>

