<body>
<main class="container">
<!-- Navbar which can be reused across other pages -->
<%- include('../partials/navbar'); %>
<img class="banner-img" src="/images/main1.jpg" alt="where your things go matters">
<br>

<!-- Information welcoming visitors to my page -->
<div class="welcome-container">
<h3>Seeking to declutter? Where your things go matters.
  Explore your options for what to do with your items, from large appliannces to small gadgest or old batteries,
  be it to recycle, repair or donate">
</h3>
</div>

<!-- Search by Item -->
<form action="/results" method="POST" class="input-section">
  <div class="input-group">
    <label for="item">Search by Item:</label>
    <select id="item" name="item" required>
      <option value="">-- Select your item --</option>
      <% 
        const items = [];
        channels.forEach(function(channel) {
          if (channel.Items && !items.includes(channel.Items)) items.push(channel.Items);
        });
        items.forEach(function(item) { 
      %>
        <option value="<%= item %>"><%= item %></option>
      <% }); %>
    </select>
  </div>
  <button type="submit" class="declutter-btn active">Search by Item</button>
</form>

<!-- New Form -->  
<form action="/results" method="POST" enctype="multipart/form-data" class="input-section">
  <h2>What would you like to declutter?</h2>
  <div class="input-methods">
    <div class="input-group">
      <label for="item-category">Choose a category:</label>
      <select id="item-category" name="category">
        <option value="">Select a category</option>
        <option value="electronics">Electronics</option>
        <option value="furniture">Furniture</option>
        <option value="clothing">Clothing</option>
        <option value="kitchenware">Kitchenware</option>
        <option value="toys">Toys</option>
        <option value="books">Books</option>
        <option value="other">Other</option>
      </select>
    </div>
    <div class="input-group">
      <label for="item-description">Describe your item:</label>
      <textarea id="item-description" name="description" placeholder="E.g., Samsung TV from 2015, slightly broken screen"></textarea>
    </div>
    <div class="input-group location">
      <label for="user-location">Your location in Singapore:</label>
      <input type="text" id="user-location" name="location" placeholder="E.g., Tampines, Jurong East">
    </div>
  </div>
  <br>
  <button type="submit" class="declutter-btn active">
    <i class="fas fa-magic"></i> Search all <i class="fas fa-laptop"></i>
  </button>
</form>

<!-- Footer -->  
