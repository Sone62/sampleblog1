<!-- Search by Item -->
<form action="/results" method="POST" class="input-section">
  <div class="input-group">
    <label for="item">Search by Item:</label>
    <select id="item" name="item" required>
      <option value="">-- Select your item --</option>
      <% 
        const items = [];
        channels.forEach(function(channel) {
          if (channel.Items && !items.includes(channel.Items)) items.push(channel.Items);
        });
        items.forEach(function(item) { 
      %>
        <option value="<%= item %>"><%= item %></option>
      <% }); %>
    </select>
  </div>
  <button type="submit" class="declutter-btn active">Search by Item</button>
</form>

